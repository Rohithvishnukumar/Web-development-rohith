<!DOCTYPE html>
<html>

<head>
  <title>Taco Recipes</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <form action="/recipe" method="POST" class="buttons">
    <h1>Taco Town</h1>
    <button type="submit" value="chicken" name="choice">chi</button>
    <button type="submit" value="beef" name="choice">be</button>
    <button type="submit" value="fish" name="choice">fi</button>
  </form>

  <div id="recipeContainer" class="hidden">
    <% if (locals.data) { %>
      <h2 id="recipeTitle"><%= data.name %></h2>
      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <li><%= data.ingredients.protein.name %>, <%= data.ingredients.protein.preparation %></li>
        <li><%= data.ingredients.salsa.name %></li>
        <% data.ingredients.toppings.forEach(topping => { %>
          <li><%= topping.quantity %> of <%= topping.name %></li>
        <% }) %>
      </ul>
    <% } else { %>
      <h2>Pick your favourite taco ingredient ðŸ‘†</h2>
    <% } %>
  </div>
</body>

</html>
